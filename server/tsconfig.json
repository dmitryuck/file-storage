{
    "compilerOptions": {
        "outDir": "dist",
        "module": "commonjs",
        "target": "es2015",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "removeComments": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "lib": [
            "es6",
            "dom"
        ]
    }
}
